<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.example.periodicsystemrecognition.HelloController?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.periodicsystemrecognition.HelloController" prefHeight="250.0" prefWidth="320.0">
    <children>
        <Label text="Enter initial x:" layoutX="10.0" layoutY="10.0" />
        <TextField fx:id="xInput" layoutX="10.0" layoutY="30.0" />

        <Label text="Enter initial v:" layoutX="10.0" layoutY="60.0" />
        <TextField fx:id="vInput" layoutX="10.0" layoutY="80.0" />

        <Button fx:id="calculateButton" text="Calculate Period" layoutX="10.0" layoutY="110.0" onAction="#calculatePeriod" />

        <Label fx:id="resultLabel" layoutX="10.0" layoutY="140.0" wrapText="true" />

        <Label fx:id="periodLabel" layoutX="10.0" layoutY="170.0" wrapText="true" text="Period: " />
        <Label fx:id="zeroCrossingsLabel" layoutX="10.0" layoutY="200.0" wrapText="true" text="Zero crossings: " />
    </children>
</AnchorPane>
